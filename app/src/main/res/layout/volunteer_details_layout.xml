<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:elevation="8dp"
        android:orientation="vertical"
        android:background="@drawable/volunteer_details_shape">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:elevation="8dp">
        <ImageView
            android:id="@+id/profile_imageview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/playstore_logo"/>
        </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/full_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amit Singh"
                android:fontFamily="@font/roboto_slab_bold"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="24dp"
                android:textSize="20sp"
                android:textColor="@color/colormarital"/>

        <TextView
            android:id="@+id/father_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Father Name"
            android:fontFamily="@font/roboto_slab_bold"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="24dp"
            android:textSize="16sp"
            android:textColor="@color/colorAccent"/>
        <TextView
            android:id="@+id/v_dob_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DOB"
            android:fontFamily="@font/roboto_slab_bold"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="24dp"
            android:textSize="16sp"
            android:textColor="@color/colorAccent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mobile_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:text="8697903433"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/roboto_slab_bold"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/gender_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:text="Male"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/roboto_slab_bold"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/full_address_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="Korammangala 6th Block, Bangalore"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/roboto_slab_bold"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"/>
</LinearLayout>
</LinearLayout>