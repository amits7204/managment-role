<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_layout"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/colorPrimaryBlack">

    <ImageView
        android:id="@+id/logo_imageview"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/volunteer2"/>
    <EditText
        android:id="@+id/otp_editText"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@drawable/secondary_primary_box"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:maxLength="6"
        android:inputType="number"
        android:hint="Enter 6 digit number"
        android:textColorHint="@color/colorSecondaryHint"
        android:textColor="@color/colorAccent"/>

    <Button
        android:id="@+id/verify_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/about_us_circle"
        android:layout_margin="24dp"
        android:fontFamily="@font/roboto_slab_bold"
        android:text="Verify"
        android:textColor="@color/colorPrimaryBlack"/>
</LinearLayout>
