<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    android:paddingTop="140dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:fontFamily="@font/roboto_slab_bold"
            android:text="Jeevan"
            android:textColor="@color/colorPrimaryBlack"
            android:textSize="46dp" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:src="@drawable/leaf"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:fontFamily="@font/roboto_slab_bold"
        android:text="Jyoti"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="46dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@drawable/signup_shape"
        android:layout_gravity="center">
        <Button
            android:id="@+id/user_reg_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="User Registration"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/roboto_slab_bold"
            android:textSize="16dp"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/round_button1"
            android:gravity="center"/>
        <Button
            android:id="@+id/volunteer_reg_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Volunteer Resgistration"
            android:layout_marginLeft="35dp"
            android:fontFamily="@font/roboto_slab_bold"
            android:textSize="16dp"
            android:textColor="@color/colorAccent"
            android:layout_marginRight="35dp"
            android:background="@drawable/round_button2"
            android:layout_marginTop="10dp"
            android:gravity="center"/>
        <Button
            android:id="@+id/admin_reg_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Admin Registration"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="35dp"
            android:fontFamily="@font/roboto_slab_bold"
            android:textSize="16dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/round_button3"
            android:layout_marginTop="10dp"
            android:gravity="center"/>
    </LinearLayout>


</LinearLayout>