<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryBlack">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="4dp"
    android:background="@color/colorPrimaryBlack">
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:elevation="16dp"
            android:src="@drawable/playstore_logo"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/primary_linear_layout_shape"
            android:layout_margin="24dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="14dp">
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile"
                android:background="@drawable/secondary_primary_box"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="24dp">

                    <LinearLayout
                        android:id="@+id/male_linear_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/secondary_primary_box"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/men_imageView"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:scaleType="fitCenter"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:src="@drawable/ic_men" />

                        <TextView
                            android:id="@+id/male_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="8dp"
                            android:fontFamily="@font/roboto_slab_bold"
                            android:text="Male"
                            android:textColor="@color/colorAccent"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/female_linear_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/secondary_primary_box"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:src="@drawable/ic_female"/>

                        <TextView
                            android:id="@+id/female_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_slab_bold"
                            android:text="Female"
                            android:textColor="@color/colorAccent"
                            android:textSize="16dp" />
                    </LinearLayout>
                </LinearLayout>
        </LinearLayout>
            <EditText
                android:id="@+id/name_edit_textview"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter Full Name"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:textColor="@color/colorAccent"
                android:background="@drawable/secondary_primary_box"
                android:textColorHint="@color/colorSecondaryHint"
                android:paddingStart="16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="8dp">
            <EditText
                android:id="@+id/mobile_edit_textview"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Mobile Number"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="2dp"
                android:maxLength="10"
                android:padding="4dp"
                android:inputType="phone"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:background="@drawable/secondary_primary_box"
                android:textColorHint="@color/colorSecondaryHint"
                android:paddingLeft="16dp"/>
            <EditText
                android:id="@+id/dob_edit_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="24dp"
                android:hint="Date of Birth"
                android:padding="4dp"
                android:inputType="date"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:background="@drawable/secondary_primary_box"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorSecondaryHint"
                android:layout_weight="1"/>
            </LinearLayout>
            <EditText
                android:id="@+id/father_name_edit_textview"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Father Name"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorAccent"
                android:background="@drawable/secondary_primary_box"
                android:textColorHint="@color/colorSecondaryHint"
                android:paddingLeft="16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Address Details"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto_slab_bold"
                        android:layout_gravity="center"
                        android:layout_margin="4dp"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/add_drawable"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_add_circle"/>
                </LinearLayout>
                <FrameLayout
                    android:id="@+id/address_framelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="@color/colorPrimarylinearLaout">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <EditText
                            android:id="@+id/v_flat_room_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="28dp"
                            android:layout_marginRight="4dp"
                            android:hint="Flat/Room/Block no"
                            android:inputType="textMultiLine"
                            android:lines="3"
                            android:layout_weight="1"
                            android:paddingLeft="16dp"
                            android:background="@drawable/secondary_primary_box"
                            android:textColor="@color/colorAccent"
                            android:textColorHint="@color/colorSecondaryHint"  />

                        <EditText
                            android:id="@+id/v_building_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="28dp"
                            android:layout_marginEnd="24dp"
                            android:hint="Bulding/villege"
                            android:inputType="textMultiLine"
                            android:lines="3"
                            android:layout_weight="1"
                            android:paddingStart="16dp"
                            android:background="@drawable/secondary_primary_box"
                            android:textColor="@color/colorAccent"
                            android:textColorHint="@color/colorSecondaryHint"  />
                        </LinearLayout>
                    <EditText
                        android:id="@+id/v_road_lane"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="24dp"
                        android:hint="Road/Street/Lane"
                        android:inputType="textMultiLine"
                        android:lines="3"
                        android:paddingLeft="16dp"
                        android:background="@drawable/secondary_primary_box"
                        android:textColor="@color/colorAccent"
                        android:textColorHint="@color/colorSecondaryHint"  />

                    <EditText
                        android:id="@+id/v_area_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="24dp"
                        android:hint="Area/locality"
                        android:inputType="textMultiLine"
                        android:lines="3"
                        android:paddingLeft="16dp"
                        android:background="@drawable/secondary_primary_box"
                        android:textColor="@color/colorAccent"
                        android:textColorHint="@color/colorSecondaryHint"  />

                    <EditText
                        android:id="@+id/v_pin_code_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="24dp"
                        android:hint="Pin Code"
                        android:inputType="number"
                        android:maxLength="6"
                        android:lines="3"
                        android:paddingLeft="16dp"
                        android:background="@drawable/secondary_primary_box"
                        android:textColor="@color/colorAccent"
                        android:textColorHint="@color/colorSecondaryHint"  />
                        <Spinner
                            android:id="@+id/v_state_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="24dp"
                            android:background="@drawable/spinner_shape" />

                        <Spinner
                            android:id="@+id/v_district_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="24dp"
                            android:background="@drawable/spinner_shape" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Register"
                    android:textSize="16dp"
                    android:background="@drawable/about_us_circle"
                    android:textColor="@color/colorPrimaryBlack"
                    android:fontFamily="@font/roboto_slab_bold"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="20dp"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>