<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryBlack"
    android:gravity="center">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/playstore_logo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/yes_or_no_shape">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"
        android:text="Are you parent?."
        android:padding="10dp"
        android:textColor="@color/colorPrimaryBlack"
        android:fontFamily="@font/roboto_slab_bold"/>
    <TextView
        android:id="@+id/yes_id"
        android:layout_width="150dp"
        android:layout_height="58dp"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:text="Yes"
        android:gravity="center"
        android:background="@drawable/primary_round_button"
        android:textColor="@color/colorAccent"
        android:fontFamily="@font/roboto_slab_bold"/>
    <TextView
        android:id="@+id/no_id"
        android:layout_width="150dp"
        android:layout_height="58dp"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:background="@drawable/primary_round_button"
        android:text="No"
        android:textColor="@color/colorAccent"
        android:fontFamily="@font/roboto_slab_bold"/>
    </LinearLayout>
</LinearLayout>
