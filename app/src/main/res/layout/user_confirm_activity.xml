<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimaryBlack"
    android:gravity="center">
    <FrameLayout
        android:id="@+id/otp_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryBlack"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorPrimaryBlack"
            android:gravity="center">

            <EditText
                android:id="@+id/r_otp_edit_text"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_margin="24dp"
                android:background="@drawable/secondary_primary_box"
                android:hint="enter six digit otp"
                android:padding="8dp"
                android:maxLength="6"
                android:inputType="number"
                android:textColor="@color/colorAccent"/>
            <Button
                android:id="@+id/r_button"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:text="Verify"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/about_us_circle"/>

        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/user_edit_details"
        android:layout_margin="24dp"
        android:orientation="vertical"
        android:elevation="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/full_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/pinkocolor"
                android:textSize="24sp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_slab_bold"/>
           <ImageView
               android:id="@+id/successful"
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:src="@drawable/ic_check_circle"
               android:layout_marginStart="24dp"
               android:layout_marginTop="4dp"
               android:layout_weight="0.5"
               android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/key"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp" />
            <TextView
                android:id="@+id/unique_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto_slab_bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/dad"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:id="@+id/father_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto_slab_bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/mother"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:id="@+id/mother_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto_slab_bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/mobile_no"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:id="@+id/mobile_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto_slab_bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/gender_icon"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:id="@+id/gender_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto_slab_bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/dob_icon"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:id="@+id/dob_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto_slab_bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/marital_status"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:id="@+id/marital_status_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto_slab_bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/education"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:id="@+id/qulification_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto_slab_bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/education_discription"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:id="@+id/education_status_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto_slab_bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/edu_disc"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:id="@+id/education_discription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto_slab_bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/occupation_icon"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:id="@+id/occupation_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto_slab_bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/occu"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:id="@+id/occupation_description_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto_slab_bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/area_icon"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:id="@+id/full_addr_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto_slab_bold"/>
        </LinearLayout>
       <LinearLayout
           android:layout_marginTop="14dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_margin="24dp">
           <Button
               android:id="@+id/edit_button"
               android:layout_width="match_parent"
               android:layout_height="58dp"
               android:background="@drawable/about_us_circle"
               android:text="Edit"
               android:layout_marginStart="24dp"
               android:layout_marginEnd="2dp"
               android:textSize="16sp"
               android:textColor="@color/colorPrimaryBlack"
               android:fontFamily="@font/roboto_slab_bold"
               android:layout_weight="1"/>
           <Button
               android:id="@+id/save_button"
               android:layout_width="match_parent"
               android:layout_height="58dp"
               android:background="@drawable/about_us_circle"
               android:text="Save"
               android:textColor="@color/colorPrimaryBlack"
               android:visibility="visible"
               android:textSize="16sp"
               android:layout_marginRight="24dp"
               android:fontFamily="@font/roboto_slab_bold"
               android:layout_weight="1"/>
       </LinearLayout>
    </LinearLayout>
</LinearLayout>

