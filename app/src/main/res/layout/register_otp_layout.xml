<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryBlack"
    android:gravity="center">

    <EditText
        android:id="@+id/r_otp_edit_text"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_margin="24dp"
        android:background="@drawable/secondary_primary_box"
        android:hint="enter six digit otp"
        android:padding="8dp"
        android:maxLength="6"
        android:inputType="number"
        android:textColor="@color/colorAccent"/>
    <Button
        android:id="@+id/r_button"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:text="Verify"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/primary_round_button"/>

</LinearLayout>
