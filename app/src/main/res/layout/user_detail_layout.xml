<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_layout_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:elevation="8dp"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:background="@drawable/user_details_shape">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:background="@drawable/family_details_shape">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/full_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/pinkocolor"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:layout_marginStart="24dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/roboto_slab_bold"
            android:layout_weight="2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/d_unique_id"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto_slab_bold"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="2dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/dad"
                android:padding="10dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp" />
            <TextView
                android:id="@+id/father_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/roboto_slab_bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="2dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/mother"
                android:layout_gravity="center"
                android:padding="5dp"/>
            <TextView
                android:id="@+id/mother_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/roboto_slab_bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/mobile_no"
                android:padding="10dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/mobile_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="1dp"
                android:fontFamily="@font/roboto_slab_bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:src="@drawable/gender_icon"
                android:padding="10dp"/>
            <TextView
                android:id="@+id/gender_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/roboto_slab_bold"/>
        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_gravity="center"
                android:src="@drawable/dob_icon"
                android:padding="5dp"/>
            <TextView
                android:id="@+id/dob_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/roboto_slab_bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="6dp"
                android:layout_gravity="center"
                android:src="@drawable/marital_status" />
            <TextView
                android:id="@+id/marital_status_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/roboto_slab_bold"/>
        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:layout_gravity="center"
                android:src="@drawable/education" />
            <TextView
                android:id="@+id/qulification_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:layout_marginLeft="2dp"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_slab_bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/education_discription" />
            <TextView
                android:id="@+id/education_status_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:layout_marginStart="2dp"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_slab_bold"/>
        </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="24dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/edu_disc" />
            <TextView
                android:id="@+id/education_disc_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:layout_marginStart="2dp"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_slab_bold"/>
        </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="23dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/occupation_icon" />
            <TextView
                android:id="@+id/occupation_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryBlack"
                android:textSize="14sp"
                android:layout_marginStart="24dp"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_slab_bold"/>
        </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="2dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/occupation_icon" />
                <TextView
                    android:id="@+id/occupation_description_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryBlack"
                    android:textSize="14sp"
                    android:layout_marginStart="24dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_slab_bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/area_icon" />

            <TextView
                android:id="@+id/area_locality_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryBlack"
                android:textSize="14sp"
                android:layout_marginStart="24dp"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_slab_bold"/>
        </LinearLayout>
        </LinearLayout>
</LinearLayout>
