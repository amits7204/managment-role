<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryBlack">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorPrimaryBlack">
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:elevation="16dp"
            android:src="@drawable/playstore_logo"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/primary_linear_layout_shape"
            android:layout_margin="24dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="14dp">
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile"
                android:background="@drawable/secondary_primary_box"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="24dp">

                    <LinearLayout
                        android:id="@+id/male_linear_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/secondary_primary_box"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/men_imageView"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:scaleType="fitCenter"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:src="@drawable/ic_men" />

                        <TextView
                            android:id="@+id/male_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="8dp"
                            android:fontFamily="@font/roboto_slab_bold"
                            android:text="Male"
                            android:textColor="@color/colorAccent"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/female_linear_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/secondary_primary_box"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:src="@drawable/ic_female"/>

                        <TextView
                            android:id="@+id/female_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_slab_bold"
                            android:text="Female"
                            android:textColor="@color/colorAccent"
                            android:textSize="16dp" />
                    </LinearLayout>
                </LinearLayout>
        </LinearLayout>
            <EditText
                android:id="@+id/name_edit_textview"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter Full Name"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:textColor="@color/colorAccent"
                android:background="@drawable/secondary_primary_box"
                android:textColorHint="@color/colorSecondaryHint"
                android:paddingLeft="16dp"/>

            <EditText
                android:id="@+id/mobile_edit_textview"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Mobile Number"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:maxLength="10"
                android:inputType="phone"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorAccent"
                android:background="@drawable/secondary_primary_box"
                android:textColorHint="@color/colorSecondaryHint"
                android:paddingLeft="16dp"/>
            <EditText
                android:id="@+id/address_textView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Full Address"
                android:lines="3"
                android:inputType="textMultiLine"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorAccent"
                android:background="@drawable/secondary_primary_box"
                android:textColorHint="@color/colorSecondaryHint"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"/>

                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Register"
                    android:textSize="16dp"
                    android:background="@drawable/primary_round_button"
                    android:textColor="@color/colorPrimaryBlack"
                    android:fontFamily="@font/roboto_slab_bold"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="20dp"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>