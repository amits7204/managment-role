<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryBlack">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="outsideInset">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/secondary_primary_box"
                android:hint="Enter Full Name"
                android:paddingLeft="16dp"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorSecondaryHint" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="24dp"
                android:hint="Enter Father's Name or Husband Name"
                android:paddingLeft="16dp"
                android:background="@drawable/secondary_primary_box"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorSecondaryHint" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="24dp"
                android:hint="Mother's name"
                android:paddingLeft="16dp"
                android:background="@drawable/secondary_primary_box"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorSecondaryHint"  />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="24dp"
                android:hint="Mobile Number"
                android:inputType="phone"
                android:paddingLeft="16dp"
                android:background="@drawable/secondary_primary_box"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorSecondaryHint"  />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:layout_marginLeft="24dp"
                    android:background="@drawable/secondary_primary_box"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_men" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="8dp"
                        android:fontFamily="@font/roboto_slab_bold"
                        android:text="Male"
                        android:textColor="@color/colorAccent"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/secondary_primary_box"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_female" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="8dp"
                        android:fontFamily="@font/roboto_slab_bold"
                        android:text="Female"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp" />
                </LinearLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="24dp"
                    android:hint="Date of Birth"
                    android:inputType="date"
                    android:paddingLeft="16dp"
                    android:background="@drawable/secondary_primary_box"
                    android:textColor="@color/colorAccent"
                    android:textColorHint="@color/colorSecondaryHint" />

            </LinearLayout>

            <Spinner
                android:id="@+id/marital_spinner"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/spinner_shape" />

            <Spinner
                android:id="@+id/eucation_spinner"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/spinner_shape" />

            <Spinner
                android:id="@+id/occupation_spinner"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/spinner_shape" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="24dp"
                android:hint="Occupation Description"
                android:inputType="textMultiLine"
                android:lines="3"
                android:paddingLeft="16dp"
                android:background="@drawable/secondary_primary_box"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorSecondaryHint"  />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="24dp"
                android:hint="Flat/Room/Block no"
                android:inputType="textMultiLine"
                android:lines="3"
                android:paddingLeft="16dp"
                android:background="@drawable/secondary_primary_box"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorSecondaryHint"  />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="24dp"
                android:hint="Bulding/villege"
                android:inputType="textMultiLine"
                android:lines="3"
                android:paddingLeft="16dp"
                android:background="@drawable/secondary_primary_box"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorSecondaryHint"  />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="24dp"
                android:hint="Area/locality"
                android:inputType="textMultiLine"
                android:lines="3"
                android:paddingLeft="16dp"
                android:background="@drawable/secondary_primary_box"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorSecondaryHint"  />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="24dp"
                android:hint="Area/locality"
                android:inputType="number"
                android:lines="3"
                android:paddingLeft="16dp"
                android:background="@drawable/secondary_primary_box"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorSecondaryHint"  />

            <Spinner
                android:id="@+id/state_spinner"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/spinner_shape" />

            <Spinner
                android:id="@+id/district_spinner"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/spinner_shape" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Register"
                android:textSize="16dp"
                android:background="@drawable/primary_round_button"
                android:textColor="@color/colorPrimaryBlack"
                android:fontFamily="@font/roboto_slab_bold"
                android:layout_margin="24dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
